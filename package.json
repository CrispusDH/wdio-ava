{
  "name": "wdio-ava",
  "version": "0.0.1",
  "description": "Experiment with running wdio v5 with AVA",
  "author": "Oleksii Ihnatiuk",
  "devDependencies": {
    "cross-env": "5.2.0",
    "typescript": "3.2.4",
    "tslint": "5.12.1",
    "tslint-eslint-rules": "5.4.0",
    "ava": "1.1.0",
    "webdriverio": "5.4.0",
    "@types/node": "10.12.18"
  },
  "scripts": {
    "tsc": "tsc",
    "ava": "ava",
    "chromedriver:up": "./chromedriver --port=4444 &",
    "chromedriver:down": "lsof -ti tcp:4444 | xargs kill",
    "clean": "rm -rf dist",
    "pretest": "npm run build && npm run chromedriver:up",
    "test": "npm run ava",
    "posttest": "npm run clean && npm run chromedriver:down",
    "lint": "tslint 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "npm run clean",
    "build": "npm run lint && npm run tsc"
  },
  "ava": {
    "files": [
      "dist/**/*.js"
    ],
    "failWithoutAssertions": false
  }
}
